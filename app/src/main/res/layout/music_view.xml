<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_marginBottom="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_music_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/heaadphone_icon"
        app:shapeAppearanceOverlay="@style/curved_square"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/songNameMV"
        android:layout_height="30dp"
        android:text="song name"
        android:layout_toEndOf="@+id/img_music_view"
        android:layout_toStartOf="@+id/songDuration"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/start_time"
        android:layout_alignParentEnd="true"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/songAlbumMV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/img_music_view"
        android:layout_toStartOf="@id/songDuration"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:text="album name"
        android:gravity="center_vertical"
        android:singleLine="true"
        />

</RelativeLayout>